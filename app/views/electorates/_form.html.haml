= form_for @electorate do |f|
  -if @electorate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@electorate.errors.count, "error")} prohibited this electorate from being saved:"
      %ul
        - @electorate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :polygon
    = f.text_area :polygon
  .actions
    = f.submit 'Save'
