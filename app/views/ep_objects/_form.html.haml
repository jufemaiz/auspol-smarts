= form_for @ep_object do |f|
  -if @ep_object.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ep_object.errors.count, "error")} prohibited this ep_object from being saved:"
      %ul
        - @ep_object.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :epobject_id
    = f.number_field :epobject_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :type
    = f.number_field :type
  .actions
    = f.submit 'Save'
