= form_for @bill do |f|
  -if @bill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bill.errors.count, "error")} prohibited this bill from being saved:"
      %ul
        - @bill.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :lords
    = f.check_box :lords
  .field
    = f.label :session
    = f.text_field :session
  .field
    = f.label :standingprefix
    = f.text_field :standingprefix
  .actions
    = f.submit 'Save'
